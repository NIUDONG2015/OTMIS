{% block contentjs %}
<script type="text/javascript">

$(document).ready(function() {
	var editor = new $.fn.dataTable.Editor({
		"ajaxUrl" : "{{ url('curve_get') }}",
		"domTable" : "#1001",
		"fields" : [{
				"label" : "线路名称:",
