	                   { "mDataProp" :"workarea","sWidth":"50px"},	                                     
	                   { "mDataProp" :"startmileage","sWidth":"20px"},	                                     
	                   { "mDataProp" :"stopmileage","sWidth":"20px"},	                                     
	                   { "mDataProp" :"direction","sWidth":"20px"},	                                     
	                   { "mDataProp" :"radius","sWidth":"20px"},	                                     
	                   { "mDataProp" :"versine","sWidth":"20px"},	                                     
	                   { "mDataProp" :"angle","sWidth":"60px"},	                                     
	                   { "mDataProp" :"superelevation","sWidth":"60px"},	                                     
	                   { "mDataProp" :"widthen","sWidth":"20px"},	                                     
	                   { "mDataProp" :"starttransition","sWidth":"20px"},	                                     
	                   { "mDataProp" :"stoptransition","sWidth":"20px"},	                                     
	                   { "mDataProp" :"starttangent","sWidth":"20px"},	                                     
	                   { "mDataProp" :"starttangent","sWidth":"20px"},	                                     
	                   { "mDataProp" :"curvelength","sWidth":"20px"},	                                     
	                   { "mDataProp" :"slope","sWidth":"20px"},	                                     
	                   { "mDataProp" :"speed","sWidth":"20px"},	                                     
	                   { "mDataProp" :"identifier", "sWidth":"20px"},	                                     
	                   { "mDataProp" :"hasoperation","sWidth":"20px"},	                                     
	                   { "mDataProp" :"remark","sWidth":"20px"},	                                     
		     ],
	    "oTableTools": {
	    	"sSwfPath": "{{ asset('swf/copy_csv_xls_pdf.swf') }}",
			"sRowSelect": "single",  //用户选择单行
			"aButtons": [
			      {"sExtends" : "editor_create" ,"editor":editor, "sButtonText": "新建" },
			      {"sExtends" : "editor_edit" ,"editor":editor , "sButtonText": "修改"},
			      {"sExtends" : "editor_remove" ,"editor":editor , "sButtonText": "删除" },
				  {"sExtends": "xls" , "sButtonText": "保存为Excel" },
			  ]
		},
	} );  
});

</script>
