		"bProcessing": true,
	    "bPaginate": true,
	    //"sPaginationType": "bootstrap",
	    "sPaginationType": "full_numbers",
	    "sAjaxSource": "{{ url('curve_get') }}",
	    //"sScrollX": "100%",
	    //"sScrollXInner": "120%",
        //"bScrollCollapse": true,
	    "aoColumns" : [
	                   { "mDataProp" :"DT_RowId","sWidth":"5px"},
